{
    "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },
    "files": {
        "ignoreUnknown": true,
        "maxSize": 5242880,
        "includes": [
            "**",
            "!**/*data-products.json",
            "!node_modules",
            "!dist",
            "!.astro",
            "!build",
            "!**/*.astro",
            "!**/*.mp4"
        ]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 100,
        "useEditorconfig": false
    },
    "css": {
        "parser": {
            "cssModules": true,
            "allowWrongLineComments": true,
            "tailwindDirectives": true
        },
        "formatter": {
            "enabled": true,
            "quoteStyle": "double"
        },
        "linter": {
            "enabled": true
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noDefaultExport": "off",
                "useImportType": "error",
                "useNodejsImportProtocol": "off",
                "noNonNullAssertion": "warn"
            },
            "correctness": {
                "noUnusedVariables": "warn",
                "noUnusedImports": "error",
                "useExhaustiveDependencies": "warn",
                "useHookAtTopLevel": "error"
            },
            "suspicious": {
                "noExplicitAny": "warn",
                "noArrayIndexKey": "warn"
            },
            "a11y": {
                "useButtonType": "off",
                "noSvgWithoutTitle": "off",
                "useKeyWithClickEvents": "warn",
                "useAltText": "error"
            },
            "complexity": {
                "noForEach": "off",
                "noImportantStyles": "off"
            },
            "performance": {
                "noAccumulatingSpread": "warn",
                "noDelete": "warn"
            }
        }
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": false
        },
        "formatter": {
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "semicolons": "always",
            "trailingCommas": "es5",
            "arrowParentheses": "always",
            "bracketSpacing": true,
            "bracketSameLine": false
        },
        "globals": ["Astro", "astroHTML"]
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": false
        },
        "formatter": {
            "trailingCommas": "none"
        }
    },
    "html": {
        "experimentalFullSupportEnabled": true
    },
    "overrides": [
        {
            "includes": ["src/**/*.astro"],
            "linter": {
                "rules": {
                    "style": {
                        "useConst": "off"
                    }
                }
            }
        },
        {
            "includes": ["*.config.{js,ts,mjs,cjs}"],
            "linter": {
                "rules": {
                    "style": {
                        "noDefaultExport": "off"
                    },
                    "suspicious": {
                        "noExplicitAny": "off"
                    }
                }
            }
        },
        {
            "includes": ["package.json"],
            "json": {
                "formatter": {
                    "expand": "always"
                }
            }
        }
    ]
}
